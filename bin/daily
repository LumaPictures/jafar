#!/bin/sh
# $Id$
# This script does the following:
#   - backup jafar subversion repository to /usr/local/jafar/svn-backup
#   - updates jafar copy in /usr/local/jafar
#   - generate html documentation with doxygen
#   - compile from scratch several modules

MAILTO=jafar-source@laas.fr
#MAILTO=tlemaire@laas.fr

output=/tmp/jafar.daily
rm -f $output

# log of all operations
logDir=/usr/local/jafar/log/
rm -f ${logDir}/*.log

(
umask 02

ssh='/usr/bin/ssh'

export JAFAR_DIR='/usr/local/jafar'

doxygen_bindir='/home/tlemaire/usr/i386-linux/bin/'
export PATH=${doxygen_bindir}:${PATH};

export PKG_CONFIG_PATH=${PKG_CONFIG_PATH}:'/home/adegroot/i386-linux/lib/pkgconfig';

# configure command
configureCmd="env CFLAGS=-fno-strict-aliasing CXXFLAGS=-fno-strict-aliasing ./configure --enable-lang='tcl ruby' --with-opencv=/usr/local/opencv --with-swig=/usr/local/swig/bin --with-lapack --with-boost_sandbox=/home/tlemaire/usr/local/boost-sandbox --with-opengl"

# modules to be checked
modules="kernel helloworld jmath datareader image camera preprocessing stereopixel qdisplay display viewer3d geom hpm gfm sift surf tracker vme locpano filter slam facetsmap sas klt bundle quasidense textures homography spaf spafsimulator spafgraph spafdb p3d stereosimu dtm calife premodeler bundler objlocalizer"

# makefile targets to be executed
targets="clean lib tcl ruby test-build test"

echo ''
echo 'host:'
/bin/uname -a
echo ''

echo ''
echo '--------------------- svn backup -----------------------------'
echo ''

if ${ssh} svn.laas.fr "setenv LD_LIBRARY_PATH /usr/local/lib ; ${JAFAR_DIR}/bin/hot-backup.py /svn/jafar /usr/local/jafar/svn-backup" ; then
    echo "repository backup...OK"
else
    echo "repository backup...ERROR"
fi

echo ''
echo '--------------------- svn update -----------------------------'
echo ''

echo 'Jafar backbone...'
svn up ${JAFAR_DIR}

for m in ${modules}; do
    echo ""
    echo "Module ${m}..."
    if test -d ${JAFAR_DIR}/modules/$m ; then
	svn up ${JAFAR_DIR}/modules/$m
    else
	echo "svn co svn+ssh://svn.laas.fr/svn/jafar/jafarModules/trunk/${m} ${JAFAR_DIR}/modules/${m}"
	svn co svn+ssh://svn.laas.fr/svn/jafar/jafarModules/trunk/${m} ${JAFAR_DIR}/modules/${m}
    fi
done

cd ${JAFAR_DIR}

echo ''
echo '---------------------- Configure -----------------------------'
echo ''

if eval ${configureCmd} > ${logDir}/configure.log 2>&1; then
    echo "${configureCmd}...OK"

    echo ''
    echo '------------------- Documentation ----------------------------'
    echo ''
    
    if make doc > ${logDir}/doc.log 2>&1 ; then
	echo "html...OK"
    else
	echo "html...ERROR"
    fi

    echo ''
    echo '--------------------- Compilation ----------------------------'
    echo ''
    for m in ${modules}; do
	echo "** module ${m}"
	cd ${JAFAR_DIR}/modules/${m}
	for t in ${targets}; do
	    if make ${t} > ${logDir}/${m}.${t}.log 2>&1; then
		echo "${t}...OK"
	    else
		echo "${t}...ERROR"
	    fi
	done
	echo ''
    done
else
    echo "${configureCmd}...ERROR"	
fi
echo ''
echo '------------------------ End ---------------------------------'
echo ''
) > $output 2>&1
mailx -s 'Daily Jafar report' $MAILTO < $output
rm -f $output
exit 0
